{
  "name": "meetspacio-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/fernandomonjav/meetspacio-api",
  "author": "Fernando Monja Vasquez <fernandomonjav@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec ts-node --files -r dotenv/config src/main.ts",
    "build": "tsc",
    "start": "node -r dotenv/config dist/main.js",
    "lint": "eslint './**/*.{js,ts}'",
    "format": "prettier --write ./**/*.{js,ts,md,html,json}",
    "prepare": "husky install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "mongodb": "^4.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md,html,json}": "prettier --write"
  }
}
